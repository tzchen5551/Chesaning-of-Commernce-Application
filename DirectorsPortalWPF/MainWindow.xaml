                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="btnHelp" Content="Help" Click="HelpScreenPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" Background="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" >
