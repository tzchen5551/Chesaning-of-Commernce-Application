<UserControl x:Class="DirectorsPortalWPF.Controls.EmailInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DirectorsPortalWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Margin="0,0,0,3" Orientation="Horizontal">
        <Label Width="100" Content="{Binding GStrInputName}"/>
        <TextBox x:Name="TxtEmail" Width="400"/>
        <Button x:Name="BtnRemoveEmail" Click="BtnRemoveEmail_Click" 
            Content="Remove" Margin="5,0,0,0" Padding="0,0,60,0" 
            Template="{StaticResource smallButtonGrey}"/>
    </StackPanel>
</UserControl>
